<p id="notice"><%= notice %></p>
<div class="row">
  <div class="span4">
    <h3>Dojo Details</h3>
    <%= render partial: "dojo_details" %>
    <%= render partial: "dojo_students" %>
  </div>
  <div class="span7">
    <%= image_tag @dojo.create_map_link, class: "img-rounded pull-right" %>
  </div>
</div>

<div class="form-actions">
  <%= link_to raw("<i class='icon-list'></i> Display All Dojos"), dojos_path, :class => 'btn'  %>&nbsp;&nbsp;
  <%= link_to raw("<i class='icon-pencil'></i> Edit #{@dojo.name}"), edit_dojo_path(@dojo), :class => 'btn' %>&nbsp;&nbsp;
  <%= link_to raw("<i class='icon-remove icon-white'></i> Delete #{@dojo. name}"), dojo_path(@dojo), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>